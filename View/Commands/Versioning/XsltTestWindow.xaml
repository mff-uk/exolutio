        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="86">
            <Button Width="151" />
            <Separator ></Separator>
            <Button Width="254"></Button>
        </StackPanel>

        <DockPanel>

        </DockPanel>
    </StackPanel>-->
</Window>
