<UserControl x:Class="Exolutio.View.FileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:avalonEdit="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit" 
             xmlns:Dialogs="clr-namespace:Exolutio.Dialogs;assembly=Exolutio.Dialogs" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <avalonEdit:TextEditor Name="tbDocument" Padding="5" Background="White" 
                                   Dialogs:AccessKeyScoper.IsAccessKeyScope="True" 
                                   FontFamily="Consolas" 
                                   FontSize="12"
                                   TextChanged="tbDocument_TextChanged" Margin="5">

        </avalonEdit:TextEditor>
    </Grid>
</UserControl>
