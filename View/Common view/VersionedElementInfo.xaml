            <Label Grid.Row="4" Grid.Column="1" Name="label3">First appeared in:</Label>
            <Label Grid.Row="4" Grid.Column="2" Name="lFirstAppearedIn">Appeared in</Label>
            
            <Label Grid.Row="5" Grid.Column="1" Name="label4">All versions:</Label>
            <Label Grid.Row="5" Grid.Column="2" Name="lAllVersions">present in</Label>


            <Label Grid.Row="6" Grid.Column="1" Name="label5">Present in versions:</Label>
            <Label Grid.Row="6" Grid.Column="2" Name="lPresent">present in</Label>


        </Grid>   
    </Border>
