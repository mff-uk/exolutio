<Window x:Class="Exolutio.Dialogs.ExolutioInputBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="InputBox" Height="128" Width="400" WindowStyle="ToolWindow" Background="AliceBlue" ShowInTaskbar="False" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox Height="24" Width="350" Margin="15,15,15,15" Name="textBox1" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Button Height="24" HorizontalAlignment="Left" Margin="50,0,0,15" Name="buttonOK" VerticalAlignment="Bottom" Width="107" Click="buttonOK_Click" IsDefault="True">OK</Button>
        <Button Height="24" HorizontalAlignment="Right" Margin="0,0,50,15" Name="buttonCancel" VerticalAlignment="Bottom" Width="107" Click="buttonCancel_Click" IsCancel="True">Cancel</Button>
    </Grid>
</Window>
