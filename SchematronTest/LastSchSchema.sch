<?xml version="1.0" encoding="utf-8"?>
<sch:schema xmlns:sch="http://www.ascc.net/xml/schematron">
  <!-- generated by eXolutio on 15.1.2012 15:12 from tournaments/MatchSchedule. -->
  <sch:pattern name="defaultname">
    <sch:context context="/tournament">
      <sch:assert test="self.matches.day-&gt;Collect( : Day | .match)-&gt;forAll(m : Match | m.start.after(self.start) and m.end.before(self.end))" />
    </sch:context>
    <sch:context context="/tournament">
      <sch:assert test="self.matches.day-&gt;Collect( : Day | .match)-&gt;exists(m : Match | m.start = self.start)" />
    </sch:context>
    <sch:context context="/tournament/matches/day/match">
      <sch:assert test="self.matchPlayers.player-&gt;forAll(p : MatchPlayer | p.MatchPlayers.Match.Day.Matches.Tournament.participatingPlayers.player-&gt;exists(px : Player | px.name = p.name))" />
    </sch:context>
    <sch:context context="/tournament">
      <sch:assert test="self.start &lt;= self.end" />
    </sch:context>
  </sch:pattern>
  <sch:pattern name="defaultname" />
  <sch:pattern name="defaultname">
    <sch:context context="/tournament">
      <sch:assert test="self.matches.day-&gt;forAll(d1 : Day, d2 : Day | d1.date &lt;&gt; d2.date)" />
    </sch:context>
  </sch:pattern>
</sch:schema>